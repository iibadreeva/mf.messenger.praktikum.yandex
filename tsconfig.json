{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2015",
    "moduleResolution": "node",
    //"types": ["jest"],
    "lib": ["DOM", "ScriptHost", "DOM.Iterable", "ES2015"],
    "sourceMap": true,
    "outDir": "./static/js",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "transform": "./node_modules/@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/sass"
  ]
}
