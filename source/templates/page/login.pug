extends ../layout

block variables
    - const title = 'Логин'
    - const name_css = 'form'

block content
    main
        .overview.overview_active
        .log-form
            div
                span.log-form__title Вход
                .log-form__control
                    input.log-form__input(placeholder="Логин" data-type="login" data-text="Ведите логин")
                    span.log-form__error
                .log-form__control
                    input.log-form__input(type="password" placeholder="Пароль" data-type="password" data-text="Ведите пароль")
                    span.log-form__error
            .log-form__group-btn
                button.log-form__btn.js-login Авторизоваться
                a(href="/registration.html").log-form__btn.log-form__btn_gray Регистрация