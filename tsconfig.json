{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2015",
    "lib": ["DOM", "ScriptHost", "DOM.Iterable", "ES2015"],
    "sourceMap": true,
    "outDir": "./static/js",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,                   /* Report errors on unused locals. */
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
